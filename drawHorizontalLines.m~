function drawHorizontalLines(startInt,endInt)

ratBrainAtlas = imread('ratBrainAtlas.jpg');
msgbox('Select the horizontal coordinates for where the histology begins and ends.');
imshow(ratBrainAtlas);
hold on

[~,ys] = ginput(2);
stepPx = (ys(end) - ys(1)) / (endInt - startInt + 1);
lineCount = 0;
for ii=startInt:endInt
    yCoord = lineCount * stepPx;
    p1 = [0 yCoord];
    p2 = [size(ratBrainAtlas,2) yCoord];
    plot([p1(2),p2(2)],[p1(1),p2(1)],'Color','b','LineWidth',2);
end